{
  "name": "super-styleguide",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "_____________________________CSS_____________________________": "",
    "stylelint": "stylelint 'src/scss/**/*.scss' || echo \"Stylelint failed for some file(s).\"",
    "cleanup-dev": "rimraf dist src/css/*.css",
    "cleanup-prod": "rimraf production src/css/*.css",
    "scss-to-css-dev": "node-sass --output-style expanded src/scss/styles/develop -o src/css/",
    "scss-to-css-prod": "node-sass --output-style expanded src/scss/styles/prod -o src/css/",
    "css-to-postcss-dev": "postcss src/css --dir dist/css",
    "css-to-postcss-prod": "postcss src/css --dir production/css",
    "styles-dev": "npm run stylelint && npm run scss-to-css-dev && npm run css-to-postcss-dev",
    "styles-prod": "npm run stylelint && npm run scss-to-css-prod && npm run css-to-postcss-prod && npm run css-to-postcss-dev",
    "_____________________________UIengine enviroment_____________________________": "",
    "watcher": "nodemon -e scss -x \"npm run styles-dev\"",
    "serve": "npm-run-all -l cleanup-dev --parallel build-serve watcher",
    "build-serve": "npx uiengine build --watch --serve",
    "local": "cross-env NODE_ENV=local     npm run serve",
    "dev": "cross-env NODE_ENV=development npm run serve",
    "prod": "cross-env NODE_ENV=production npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/giuliachiola/giulia-styleguide.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/giuliachiola/giulia-styleguide/issues"
  },
  "homepage": "https://gitlab.com/giuliachiola/giulia-styleguide#readme",
  "devDependencies": {
    "@uiengine/adapter-html": "^2.3.1",
    "@uiengine/core": "^2.5.3",
    "cross-env": "^5.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "normalize-scss": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "sass-mq": "^5.0.1",
    "stylelint": "^10.1.0",
    "stylelint-order": "^3.1.0",
    "stylelint-scss": "^3.10.0"
  }
}
